{
    "dataRoles": [
        {
            "displayName": "Category Data",
            "name": "category",
            "kind": "Grouping",
            "description": "Fields to place on horizontal / vertical axis",
            "requiredTypes": [
                {
                    "text": true
                }
            ],
            "preferredTypes": [
                {
                    "text": true
                }
            ]
        },
        {
            "displayName": "Measure Data",
            "name": "measure",
            "kind": "Measure",
            "description": "The numeric amounts to plot",
            "requiredTypes": [
                {
                    "numeric": true
                },
                {
                    "integer": true
                }
            ],
            "preferredTypes": [
                {
                    "integer": true
                }
            ]
        },
        {
            "displayName": "Legend",
            "name": "subCategory",
            "kind": "Grouping",
            "description": "Sub-category to place on horizontal / vertical axis",
            "requiredTypes": [
                {
                    "text": true
                }
            ],
            "preferredTypes": [
                {
                    "text": true
                }
            ]
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "category": {
                        "max": 1
                    },
                    "subCategory": {
                        "max": 1
                    },
                    "measure": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "select": [
                        {
                            "for": {
                                "in": "category"
                            },
                            "dataReductionAlgorithm": {
                                "top": {
                                    "count": 30000
                                }
                            }
                        }
                    ]
                },
                "values": {
                    "group": {
                        "by": "subCategory",
                        "select": [
                            {
                                "bind": {
                                    "to": "measure"
                                }
                            }
                        ]
                    },
                    "dataReductionAlgorithm": {
                        "top": {
                            "count": 30000
                        }
                    }
                }
            }
        }
    ],
    "objects": {
        "dataCard": {
            "properties": {
                "defaultTextColor": {
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "fontSize": {
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                },
                "fontFamily": {
                    "type": {
                        "formatting": {
                            "fontFamily": true
                        }
                    }
                },
                "fontBold": {
                    "type": {
                        "bool": true
                    }
                },
                "fontColor": {
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "flipChart": {
                    "type": {
                        "bool": true
                    }
                },
                "showDataLabels": {
                    "type": {
                        "bool": true
                    }
                },
                "showAxisLabels": {
                    "type": {
                        "bool": true
                    }
                }
            }
        }
    },
    "tooltips": {
        "supportedTypes": {
            "default": true,
            "canvas": true
        },
        "roles": [
            "tooltips"
        ],
        "supportEnhancedTooltips": true
    },
    "supportsLandingPage": true,
    "privileges": []
}